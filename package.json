{
  "name": "spring",
  "module": "index.ts",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "description": "Spring - System of Progressive Intelligence Generation",
  "repository": {
    "type": "git",
    "url": "https://github.com/elumixor/spring"
  },
  "scripts": {
    "build": "bun run --filter '*' build",
    "dev": "bun run --filter '*' dev",
    "lint": "bun run eslint --ext .ts .",
    "pc:commit-message": "bun run ./hooks/commit-message.ts",
    "prepare": "husky"
