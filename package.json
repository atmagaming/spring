  "pre-commit": [
    "pc:commit-message"
  ],
  "post-commit": [
    "pc:commit-message"
  ],
  "devDependencies": {
    "@types/bun": "latest",
    "husky": "^9.1.4",
    "identify": "^0.1.5"
  },
  "peerDependencies": {
    "typescript": "^5.5.0"
  },
  "dependencies": {
    "@elumixor/eslint": "^0.1.3",
    "@elumixor/frontils": "2.4.2",
    "@grammyjs/emoji": "^1.2.0",
    "chalk": "^5.3.0",
    "dotenv": "^16.4.5"
  }
}
